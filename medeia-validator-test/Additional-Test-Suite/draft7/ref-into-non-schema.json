[
  {
    "description": "Refs pointing into non-schema objects",
    "schema": {
      "type": "array",
      "items": {
        "$ref": "#/uniqueItems",
        "type": []
      },
      "uniqueItems": true
    },
    "tests": [
      {
        "description": "items allows everything if ref is followed",
        "data": [ true, false, 42 ],
        "valid": true
      }
    ]
  },
  {
    "description": "Refs pointing into non-schema objects",
    "schema": {
      "type": "array",
      "items": {
        "$ref": "#/uniqueItems",
        "type": "boolean"
      },
      "uniqueItems": false
    },
    "tests": [
      {
        "description": "items allows nothing if ref is followed",
        "data": [ true, true ],
        "valid": false
      }
    ]
  },
  {
    "description": "Refs pointing into non-schema objects with its own $id",
    "schema": {
      "type": "array",
      "items": {
        "$ref": "urn:myscheme:myid",
        "type": []
      },
      "default": [
        {
          "$id": "urn:myscheme:myid",
          "type": "integer"
        }
      ],
      "uniqueItems": true
    },
    "tests": [
      {
        "description": "items allows numbers if ref is followed",
        "data": [ 42, 23 ],
        "valid": true
      }
    ]
  },
  {
    "description": "Refs pointing into non-schema objects with multiple json-pointer steps",
    "schema": {
      "type": "array",
      "items": {
        "$ref": "#/defs/truthy",
        "type": []
      },
      "defs": {
        "truthy": true
      }
    },
    "tests": [
      {
        "description": "items allows everything if ref is followed",
        "data": [ true, false, 42 ],
        "valid": true
      }
    ]
  },
  {
    "description": "Refs pointing into non-schema objects with multiple json-pointer steps",
    "schema": {
      "type": "array",
      "items": {
        "$ref": "#/defs/truthy",
        "type": "boolean"
      },
      "defs": {
        "truthy": false
      }
    },
    "tests": [
      {
        "description": "items allows nothing if ref is followed",
        "data": [ true, true ],
        "valid": false
      }
    ]
  },
  {
    "description": "Refs pointing into non-schema objects don't cause schema parsing errors because #/items isn't really defined twice",
    "schema": {
      "type": "array",
      "items": {
        "$ref": "#/defs/truthy",
        "type": "number"
      },
      "defs": {
        "truthy": {
          "type": "boolean",
          "items": {
            "type": "null"
          }
        }
      }
    },
    "tests": [
      {
        "description": "items allows nothing if ref is followed",
        "data": [ true, true ],
        "valid": true
      }
    ]
  }
]